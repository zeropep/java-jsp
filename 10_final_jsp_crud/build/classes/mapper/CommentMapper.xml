<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CommentMapper">
<sql id="pno_cond">
	where pno = #{pno}
</sql>
<sql id="cno_cond">
	where cno = #{cno}
</sql>
  <insert id="reg" parameterType="cvo">
  	insert into comment (pno, writer, content)
  	values (#{pno}, #{writer}, #{content})
  </insert>
  <select id="list" parameterType="long" resultType="cvo">
  	select * from comment
  	<include refid="pno_cond"/>
  </select>
  <update id="mod" parameterType="cvo">
  	update comment set content = #{content} <include refid="cno_cond"/>
  </update>
  <delete id="del" parameterType="long">
  	delete from comment <include refid="cno_cond"/>
  </delete>
  <delete id="delAll" parameterType="long">
  	delete from comment <include refid="pno_cond"/>
  </delete>
</mapper>